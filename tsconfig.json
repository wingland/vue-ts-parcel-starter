{
  "compilerOptions": {
      "module": "es2015",
      "noImplicitAny": true,
      "removeComments": true,
      "moduleResolution": "node",
      "preserveConstEnums": true,
      "sourceMap": true,
      "strict": true,
      "target": "es5",
      "experimentalDecorators": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
  "parcelTsPluginOptions": {
    // If true type-checking is disabled
    "transpileOnly": false
  }
}
